<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_tile_element_height"
    android:background="@color/prefColor"
    android:orientation="vertical"
    android:elevation="6dp">


        <TextView
            android:paddingTop="@dimen/savings_padding_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:id="@+id/widget_title_text_view"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/widget_title_view_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textColor="@color/textColor"
            android:id="@+id/widget_savings_text_view"
            android:gravity="center"
            android:textSize="@dimen/savings_text_size"
            android:maxLines="1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:id="@+id/widget_price_text_view"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/widget_title_view_text_size"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:id="@+id/widget_new_price_text_view"
            android:textAlignment="center"
            android:textSize="@dimen/widget_title_view_text_size"
            />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


